<!--pages/detail/detail.wxml-->
<view class="detailContainer">
  <image class="headImg" src="{{detailObj.detail_img}}"></image>
  <image class="musicImg"  catchtap="handleMusicPlay" src="{{isMusicPlay?'/images/1.jpg':'/images/ai.jpg'}}"></image>
  <view class="avatar_date">
     <image src="{{detailObj.avatar}}"></image>
     <text>{{detailObj.author}}</text>
     <text>发布于</text>
     <text>{{detailObj.date}}</text>
  </view>
  <text class="company">{{detailObj.title}}</text>
  <view class="collection_share_container">
     <view class="collection_share">
       <image wx:if="{{isCollected}}" catchtap="handleCollection" src="/images/ai.jpg"></image>
       <image wx:if="{{!isCollected}}" catchtap="handleCollection" src="/images/1.jpg"></image>
       <image src="/images/ai.jpg" catchtap="handleShow"></image>
     </view>
     <view class="line"></view>
  </view>
  <button open-type="share">转发此文章</button>
  <text class="content">
   {{detailObj.detail_content}}
  </text>
 
</view>
